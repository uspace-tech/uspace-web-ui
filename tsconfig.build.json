{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist/src",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": ["src"],
  "exclude": ["**/*.stories.ts", "**/*.stories.tsx"]
}
